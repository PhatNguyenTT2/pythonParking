{
  "name": "parkingBackend",
  "version": "0.0.1",
  "main": "python/main.py",
  "scripts": {
    "start": "cd python && python main.py",
    "dev": "cd python && python main.py",
    "dev:frontend": "cd frontend && npm run dev",
    "install:python": "cd python && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:python && npm run install:frontend",
    "build:ui": "cd frontend && npm run build && cd ..",
    "deploy:render": "npm run build:ui && git add . && git commit -m \"Deploy to Render\" && git push",
    "lint:python": "cd python && pylint **/*.py",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "dependencies": {},
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  }
}